{
  "permissions": {
    "allow": [
      "Npm install",
      "Npm run *",
      "Npx *",
      "Node *",
      "Git status",
      "Git diff *",
      "Git log *",
      "Git add *",
      "Git commit *",
      "Git branch *",
      "Git checkout *",
      "Ls *",
      "Pwd",
      "Which *",
      "Echo *"
    ],
    "deny": ["Rm -rf /", "Git push --force *", "Git reset --hard *"]
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/edy/Documents/web3/yjp-agent"
      ]
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILE_PATH\" =~ \\.(js|ts|jsx|tsx|json)$ ]]; then npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true; fi"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"任务完成\" with title \"Claude Code\"' 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
