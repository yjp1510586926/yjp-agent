{
  "permissions": {
    "allow": [
      "Npm install",
      "Npm run *",
      "Npx *",
      "Node *",
      "Git status",
      "Git diff *",
      "Git log *",
      "Git add *",
      "Git commit *",
      "Git branch *",
      "Git checkout *",
      "Ls *",
      "Pwd",
      "Which *",
      "Echo *"
    ],
    "deny": ["Rm -rf /", "Git push --force *", "Git reset --hard *"]
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/home/user/yjp-agent"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_TOKEN}"
      }
    }
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "case \"$CLAUDE_FILE_PATH\" in *.js|*.ts|*.jsx|*.tsx|*.json) npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true ;; esac"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "osascript -e 'display notification \"任务完成\" with title \"Claude Code\"' 2>/dev/null || true"
          }
        ]
      }
    ]
  }
}
